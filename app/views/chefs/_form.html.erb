<%= render 'shared/errors', obj: @chef %>

<div class="row">
  <div class="col-md-11">
    <%= form_for(@chef, :html => {class: "form-horizontal center", role: "form"}) do |f| %>
      <div class="form-group center">
        <div class="control-label col-md-3">
          <%= f.label :chefname, "Choose chef name" %>
        </div>
        <div class="col-md-7">
          <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
        </div>
      </div>
      <div class="form-group center">
        <div class="control-label col-md-3">
          <%= f.label :email %>
        </div>
        <div class="col-md-7">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
      <div class="form-group center">
        <div class="control-label col-md-3">
          <%= f.label :password %>
        </div>
        <div class="col-md-5">
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
        </div>
      </div>
      <div class="form-group center">
        <div class="control-label col-md-3">
          <%= f.label :password_confirmation, "Confirm Password" %>
        </div>
        <div class="col-md-5">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
        </div>
      </div>
      <div class="form-group center">
        <div class="col-md-offset-2 col-md-8 center">
          <!-- Returns true if this object hasn’t been saved yet – that is, a record for the object doesn’t exist in the database yet; otherwise, returns false  -->
          <%= f.submit(@chef.new_record? ? "Create my account" : "Update my account", class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <div class="center colormatch">
      [ <%= link_to "return to recipes listing", recipes_path %> ]
    </div>
  </div>
</div>