<%= render 'shared/set_title', title: "Your profile" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for(@chef, size: 150) %>
  </div>
</div>
<br>
<!-- Check if a chef has some recipes -->
<% if @chef.recipes.count != 0 %>
  <h4 align="center"><%= @chef.chefname %>'s recipes</h4>
  <div align="center">
    <%= will_paginate @chef_recipes %>
  </div>
  <%= render 'recipes/recipe', obj: @chef_recipes %>
  <div align="center">
    <%= will_paginate @chef_recipes %>
  </div>
<% else %>
<!-- Chef has not yet any recipes shows as follow -->
  <h4 align="center">No recipes yet!</h4>
<% end %>

