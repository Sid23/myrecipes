<%= render 'shared/set_title', title: "Edit an existing recipe" %>

<!-- Errors management wit bootstrap css -->
<% if @recipe.errors.any? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-0">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@recipe.errors.count, "error") %>
            prohibited this <%= @recipe.class %> from being saved:
          </h2>
          <div class="panel-body">
            <ul>
              <% @recipe.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>  
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="center">
          <%= f.label :name %>
        </div>
        <div class="col-md-4 col-md-offset-4 center">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="center">
          <%= f.label :description %>
        </div>
        <div class="col-md-6 col-md-offset-3">
          <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <hr />
      <div class="form-group">
        <div class="center">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="center colormatch">
      [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
    </div>
  </div>
</div>